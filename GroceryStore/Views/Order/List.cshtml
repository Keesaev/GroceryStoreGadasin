@model IEnumerable<Order>
@{ 
    ViewBag.Title = "Заказы";
    Layout = "_AdminLayout";
}
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Имя</th>
            <th>Адрес</th>
            <th>Платеж</th>
            <th colspan="2">Детали</th>
            <th></th>
        </tr>
        @foreach (Order o in Model)
        {
            <tr>
                <td>@o.Name</td>
                <td>@o.Address</td>
                @if(o.Payment == 1)
                {
                    <td>Наличными при получении</td>
                }
                else 
                {
                    <td>Картой при получении</td>
                }
                <th>Продукт</th>
                <th>Количество</th>
                <td>
                    <form asp-action="MarkShipped" method="post">
                        <input type="hidden" name="Id" value="@o.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Доставлено
                        </button>
                    </form>
                </td>
            </tr>
            @foreach (CartLine line in o.Lines)
            {
                <tr>
                    <td colspan="3"></td>
                    <td>@line.Product.Name</td>
                    <td>@line.Quantity</td>
                </tr>
            }
        }
    </table>
}
else
{
    <div class="text-center">Нет недоставленных заказов</div>
}
