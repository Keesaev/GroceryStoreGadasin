@model CurrentCartIndexViewModel

<h2>Ваша корзина</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Количество</th>
            <th>Наименование</th>
            <th class="text-right">Стоимость</th>
            <th class="text-right">Общая стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.CurrentCart.Lines)
        {
            <tr>
                <td class="text-center">@line.Quantity</td>
                <td class="text-left">@line.Product.Name</td>
                <td class="text-right">@line.Product.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Quantity * line.Product.Price).ToString("c"))
                </td>
                <td>
                    <form asp-action="RemoveFromCurrentCart"
                          method="post">
                        <input type="hidden" name="productId"
                               value="@line.Product.Id" />
                        <input type="hidden" name="returnUrl"
                               value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Сумма:</td>
            <td class="text-right">
                @Model.CurrentCart.ComputeTotalValue().ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Продолжить покупки</a>
    <a class="btn btn-primary" asp-action="Checkout"
       asp-controller="CurrentOrder">
        Оплатить
    </a>
</div>